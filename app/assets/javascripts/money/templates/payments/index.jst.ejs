
<a id="toggle-create-payment-form" class="btn btn-link" href="#" role="button">+ create payment</a>

<form id="create-payment" class="form-horizontal">
  <div class="validation-response"></div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="amount">
      payment amount*
    </label>
    <div class="col-sm-10">
      <input class="form-control" type="number" step="any" id="amount" name="amount" placeholder="payment amount" required />
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="payment-source-id">
      select card*
    </label>
    <div class="col-sm-10">
      <select class="form-control" class="payment-source-id" id="payment-source-id" name="payment_source_id" required></select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" type="submit">
        make payment
      </button>
    </div>
  </div>
</form>

<ul class="payments list-group"></ul>
